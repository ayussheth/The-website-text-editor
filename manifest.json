    "version": "3.0",
    "icons": [
      {
        "src": "logo.png",
        "sizes": "16x16",
        "type": "image/png"
      },
      {
        "src": "logo.png",
        "sizes": "16x16",
        "type": "image/png"
      },
      {
        "src": "logo.png",
        "sizes": "16x16",
        "type": "image/png"
      }
    ],
  
    "content_scripts": [
      {
